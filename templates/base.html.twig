<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mengibar{% endblock %}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <header class="bg-dark text-white text-center p-3">
        <h1>PAGINA SYMFONY MENGI</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Sobre Mi</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Contacto</a></li>
            {# <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Cerrar Sesión</a></li> #}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="{{ asset('img/perfil.png') }}" alt="Logo" class="img-fluid" style="max-width: 35px;">
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {# <a class="dropdown-item" href="#">Hola <b>{{ correo }}</b></a> #}
                    <a class="dropdown-item" href="#">Hola <b>{{ app.user.email }}</b></a>
                    <a class="dropdown-item" href="{{ path('formulario_producto') }}">Formulario Producto</a>
                    <a class="dropdown-item" href="{{ path('ver_productos') }}">Crud Productos</a>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar Sesión</a>
                </div>
            </li>
        </ul>
    </nav>

    <main class="p-5">
        {% block body %}{% endblock %}
    </main>

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    {% endblock %}
</body>
</html>